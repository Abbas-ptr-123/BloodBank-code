@model BloodBank.Models.Register

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/Register.css" rel="stylesheet" />
    <link rel="icon" href='~/images/logo.png' type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    
    <br>
    <div class="container">
        <h1>Signup</h1>
        <form asp-action="Register" asp-controller="Home" method="post" enctype="multipart/form-data">
            <label for="category">I am a:</label>
            <select id="category" name="Role" onchange="showForm(this.value)">
                <option value="">Select Role</option>
                <option value="Donor">Donor</option>
                <option value="Seeker">Seeker</option>
            </select>

            <div class="donor-form" style="display:none">
               
                <label for="name">Name:</label>
                <input type="text" id="name" name="FullName" required><br>
                <label for="father-name">Father's Name:</label>
                <input type="text" id="father-name" name="FatherName" required><br>
                <label for="email">Email:</label>
                <input type="email" id="email" name="Email" required><br>
                <label for="password">Password:</label>
                <input type="password" id="password" name="Password" required><br>
                <label for="phone-number">Phone Number:</label>
                <input type="tel" id="phone-number" name="ContactNumber" required><br>
                <label for="address">Address:</label>
                <textarea id="address" name="Address" required></textarea><br>
                <label for="blood-group">Blood Group:</label>
                <select id="blood-group" name="BloodGroup" required>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select><br>
            </div>

            <div class="receiver-form" style="display:none">
               
                <label for="name">Name:</label>
                <input type="text" id="name" name="FullName" required><br>
                <label for="father-name">Father's Name:</label>
                <input type="text" id="father-name" name="FatherName" required><br>
                <label for="email">Email:</label>
                <input type="email" id="email" name="Email" required><br>
                <label for="password">Password:</label>
                <input type="password" id="password" name="Password" required><br>
                <label for="phone-number">Phone Number:</label>
                <input type="tel" id="phone-number" name="ContactNumber" required><br>
                <label for="address">Address:</label>
                <textarea id="address" name="Address" required></textarea><br>
            </div>
            <button type="button" onclick="window.location.href='@Url.Action("LogIn", "Home")'">Signup</button>

            <h1><a href="@Url.Action("LogIn", "Home")">Already have an Account</a></h1>
        </form>
        <script src="~/js/Register.js"></script>
    </div>

    <script>
        function showForm(category) {
            if (category == "Donor") {
                document.querySelector(".donor-form").style.display = "block";
                document.querySelector(".receiver-form").style.display = "none";
            } else if (category == "Seeker") {
                document.querySelector(".donor-form").style.display = "none";
                document.querySelector(".receiver-form").style.display = "block";
            } else {
                document.querySelector(".donor-form").style.display = "none";
                document.querySelector(".receiver-form").style.display = "none";
            }
        }
    </script>
</body>
</html>
